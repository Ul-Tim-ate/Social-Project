doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Проекты
  body
   - var values = projects;
   ul
    each val in values
     li= val
   form(action='create-project' method='post')
    input(type='text' name='name' placeholder='Название проекта')
    input(type='text' name='description' placeholder='Описание проекта')
    input(type='number' name='totalSum' placeholder='Сколько нужно собрать')
    input(type='submit' value='создать')